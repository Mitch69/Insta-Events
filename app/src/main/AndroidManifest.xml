<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.example.instaevents">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <!-- Main Activity-->
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- ListPerCategory Activity -->
        <activity android:name=".BrowsePage.ListPerCategory.ListPerCategoryActivity"
            android:screenOrientation="portrait">
        </activity>


        <!-- Tab Activity-->
        <activity android:name=".EventsPage.TabActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- ClickedEvent Activity-->
        <activity android:name=".ClickedEvent.ClickedEventActivity"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>