<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="390dp"
        android:layout_height="544dp"
        android:layout_marginTop="130dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="14dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Choma na Ngoma"
                android:textColor="#262626"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/idInterested"
                android:layout_width="148dp"
                android:layout_height="48dp"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:clickable="true"
                android:text="I'm interested"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/idShare"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginLeft="203dp"
                android:layout_marginTop="-48dp"
                android:background="@drawable/button_shape"
                android:src="@drawable/share_icon" />
<!--android:background="@android:color/transparent"-->

            <ImageView
                android:id="@+id/idStaticDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:drawablePadding="10dp"
                android:src="@drawable/ic_event_black_24dp" />

            <TextView
                android:id="@+id/idDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="-21dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="Date" />


            <ImageView
                android:id="@+id/idStaticTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:src="@drawable/ic_access_time_black_24dp"/>
            <TextView
                android:id="@+id/idTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="-18dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="Time" />


            <ImageView
                android:id="@+id/idStaticLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:src="@drawable/ic_location_on_black_24dp"/>
            <TextView
                android:id="@+id/idLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="-18dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="Location" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/idStaticFeaturing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="Featuring"
                android:textColor="#000" />
            <TextView
                android:id="@+id/idFeaturing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="Featuring Text" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/idStaticMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="More Info"
                android:textColor="#000" />
            <TextView
                android:id="@+id/idMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:drawablePadding="10dp"
                android:text="More Info" />



        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Event Image-->
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:elevation="25dp"
        card_view:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/choma"
            android:transitionName="imageTransition"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
    </RelativeLayout>