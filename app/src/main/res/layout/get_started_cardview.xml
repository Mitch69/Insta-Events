<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/idCardView"
        android:layout_width="142dp"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:cardElevation="8dp"
        app:cardCornerRadius="6dp">


        <RelativeLayout
            android:id="@+id/idLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/idEventImage"
                android:layout_width="144dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="event_image"
                android:scaleType="fitStart"
                android:src="@drawable/choma" />

                <TextView
                    android:id="@+id/idEventText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="event"
                    android:layout_below="@+id/idEventImage"
                    android:layout_marginTop="-20dp"/>

                <TextView
                    android:id="@+id/idDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="date"
                    android:layout_below="@+id/idEventText"/>

                <TextView
                    android:id="@+id/idVenueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="venue"
                    android:layout_below="@+id/idDateText"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>